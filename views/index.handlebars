<div class="jumbotron">
  
      <div class="col d-flex justify-content-center">
        <h1> Eat-Da-Burger!</h1>
      </div>
   
    <div class="row">
      <div class="col d-flex justify-content-center">
        <image src="assets/images/burger.png" alt="A burger" width="320" height="300"></image>
      </div>
    </div>
  
</div>


<div class="container">
 <div class="row">
    
    
    <div class="col">
      <h2 >Burgers to be Devoured!</h2>
      <ul class="list-group">
        {{#each burgers}}
        {{#unless devoured}}
        <li class="list-group-item">
          {{burger_name}}
          <button id={{id}} type="button" class="btn btn-outline-danger devourBtn">Devour it!</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>


    <div class="col">
      <form action="/api/burgers" method="post">
        <div class="form-group">
          <h2 form="burgerSubmit" class="font-weight-bold col d-flex justify-content-center">Add a Burger</h2>
          <input name="burgerSubmit" type="text" class="form-control"
            placeholder="Type Burger Name Here" required>
            <br>
        <button type="button" class="btn btn-secondary bg-dark btn-lg btn-block">Submit üçî</button>      
          </div>
      </form>
    </div>


    <div class="col">
      <h2> Devoured Burgers!</h2>
      <ul class="list-group">
        {{#each burgers}}
        {{#if devoured}}
        <li class="list-group">
          {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
</div>

<script>
    $("button").click(function (event) {
        const id =event.target.id;
        $.ajax({
            url: 'api/burgers/${id}',
            method: "PUT"
        }).then(location.reload())
    })
</script>
